{
  "name": "openaicodegen",
  "displayName": "OpenAICodeGen",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "openaicodegen.refactorCode",
        "title": "OpenAI: Refactor Code"
      },
      {
        "command": "openaicodegen.showBugs",
        "title": "OpenAI: Show Bugs"
      },
      {
        "command": "openaicodegen.addComments",
        "title": "OpenAI: Add Comments"
      },
      {
        "command": "openaicodegen.generateUnitTest",
        "title": "OpenAI: Generate Unit Test"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "openaicodegen.refactorCode",
          "group": "openaicodegen"
        },
        {
          "command": "openaicodegen.showBugs",
          "group": "openaicodegen"
        },
        {
          "command": "openaicodegen.addComments",
          "group": "openaicodegen"
        },
        {
          "command": "openaicodegen.generateUnitTest",
          "group": "openaicodegen"
        }
      ]
    },
    "configuration": {
      "title": "OpenAI CodeGen",
      "properties": {
        "openaicodegen.apiKey": {
          "type": "string",
          "default": "",
          "description": "Your OpenAI API Key",
          "format": "password"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "^16.18.10",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vscode/test-electron": "^2.2.0",
    "eslint": "^8.28.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "typescript": "^4.6.4"
  },
  "dependencies": {
    "openai": "^3.1.0",
    "axios": "^1.0.0"
  }
}
